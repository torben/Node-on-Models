doctype 5
html(lang="en")
  head
    title Torben Toepper

    link(rel='stylesheet', href='/stylesheets/style.css')

    block templates

    script(type='text/javascript').
      var lib = (('__proto__' in {}) ? 'zepto' : 'jquery');
      document.write('<script src="/javascripts/lib/'+lib+'.js"><\/script>');
      document.write('<script src="/javascripts/lib/'+lib+'.scrollto.js"><\/script>');

    script(type='text/javascript', src='/javascripts/lib/underscore.js')
    script(type='text/javascript', src='/javascripts/lib/backbone.js')

    script(type='text/javascript', src='/javascripts/helpers/namespace.js')
    script(type='text/javascript', src='/javascripts/helpers/prototype.js')
    script(type='text/javascript', src='/javascripts/helpers/remote_data_handler.js')
  body
    nav.nav.shadow
      .container
        ul.left
          li
            a(href="/articles/home", rel="backbone")
              img(src="/images/tt-logo-small.png", title="TT")

        .navigations
        .clear

    .main-container
      #nav-begin-line
      block body
    footer.footer
      a(href='http://twitter.com/torben_tt') &copy; 2013 Torben Toepper


